	<title>Settings</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link rel="stylesheet" type="text/css" href="/css/styles.css">
	<link href="https://fonts.googleapis.com/css?family=Dosis" rel="stylesheet">
	<link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">
	
</head>
<body>
	<div class="container">
		<center>
			<div class="row mt-5">
				<div class="col-sm-4">
				</div>
				<div class="col-sm-4"><h1>Settings</h1></div>
				<div class="col-sm-4">
					{{#if viewOLD}}
					<ul>
						<li><i id="HelpButtonOLD" class="fas fa-info-circle fa-lg" onclick="helpSettings()" onmouseover="" style="cursor: pointer;"></i><p onclick="helpSettings()" onmouseover="" style="cursor: pointer;">Help</p></li>
						<li><a id="ProfileButtonOLD" href="profile" class="black"><i class="fas fa-user fa-lg"></i><p>Profile</p></a></li>
						<li><a id="LogoutButtonOLD" href="/" class="black"><i class="fas fa-sign-out-alt fa-lg"></i><p>Logout</p></a></li>
					</ul>
					{{/if}}
				</div>
			</div>


			<h4 class="mt-3" data-toggle="tooltip" title="The sound that will play whenever you're off-task for too long">Alert Sound</h4>
			<div class="soundscroll squares" id="scroll2">
					{{#each alerts}} 
					<button class="btn btn-outline-secondary alarm {{alarm}} btn-grad" onclick="soundEffect({{soundEffectnum}})" id="{{id}}"><i class='{{icon}} fa-lg'></i><br>{{name}}</button>
					{{/each}}
			</div>

			<!-- add save button: on save, updateTimeRange() -->
			

			<div class="row">
				<div class="col-sm-2"></div>
				<div class="col-sm-4 alertperiod">
					<!-- Alert Period: change minimum to 30 seconds? Link to Alert Settings later-->
					<h4 data-toggle="tooltip" title="The amount of time between each alert">Alert Period: <span id="alerttime">3</span> minutes</h4>
					<br>

				<!-- 	<div class="slidecontainer">
						<input type="range" min="1" max="5" value="3" class="slider" id="alertRange" oninput="updateAlertTime(this.value)">
					</div> -->
					<!-- CONVERT TO JSON LATER-->
					<div id="AlertPeriodSettings" class="btn-group btn-group-toggle " data-toggle="buttons">
						<label class="btn btn-secondary">
							<input type="radio" name="options" id="option1" autocomplete="off" checked onchange="updateAlertTime(1)"> 1
						</label>
						<label class="btn btn-secondary">
							<input type="radio" name="options" id="option2" autocomplete="off"  onchange="updateAlertTime(2)"> 2
						</label>
						<label class="btn btn-secondary active">
							<input type="radio" name="options" id="option3" autocomplete="off" onchange="updateAlertTime(3)"> 3
						</label>
						<label class="btn btn-secondary">
							<input type="radio" name="options" id="option4" autocomplete="off" onchange="updateAlertTime(4)"> 4
						</label>
						<label class="btn btn-secondary">
							<input type="radio" name="options" id="option5" autocomplete="off" onchange="updateAlertTime(5)"> 5
						</label>
					</div>

				</div>
				<div class="col-sm-4 breaktime">
					<h4 data-toggle="tooltip" title="How loud the alert will sound">Alert Volume: <output id="volume" for="alertVolume">100</output></h4>

					<br>
					<div class="slidecontainer">
						<input type="range" min="1" max="100" value="100" class="slider" id="alertVolume" oninput="volume.value = alertVolume.value; updateAlertVolume(alertVolume.value)">
					</div>

				</div>
				<div class="col-sm-2"></div>
			</div>

			<a href="screen2" class="btn btn-outline-primary float mb-4" role="button" aria-pressed="true" aria-disabled="true" onclick="resetPTimer()">Save and Exit</a>

{{#if viewNEW}}
			<div class="container-fluid">
				<div class="row icons">
					<div id="SettingsButtonNEW" class="col-3 activeIcon"><a href="alertsettings" class="white"><i class="fas fa-cogs fa-lg"></i><p>Settings</p></a></div>
					<div id="HelpButtonNEW" class="col-3"><i class="fas fa-info-circle fa-lg" onclick="helpSettings()" onmouseover="" style="cursor: pointer;"></i><p onclick="helpSettings()" onmouseover="" style="cursor: pointer;">Help</p></div>
					<div id="ProfileButtonNEW" class="col-3"><a href="profile" class="white" disabled><i class="fas fa-user fa-lg"></i><p>Profile</p></a></div>
					<div id="LogoutButtonNEW" class="col-3"><a href="/" class="white"><i class="fas fa-sign-out-alt fa-lg"></i><p>Logout</p></a></div>
				</div>
			</div>
{{/if}}
		</center>
	</div>
	<footer class="mt-5">
		<div class="row">
			<div class="col-sm-12">

			</div>
		</div>
	</footer>

	<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
